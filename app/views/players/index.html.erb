<div class="centered-panel">
<p id="notice"><%= notice %></p>

<h1>Players</h1>
<h3><%= link_to 'New Player', new_player_path %></h3>

<% number = 10 %>
<% @players.map(&:session).uniq.each do |session| %>
  <% number += 10 %>
  <% number -= number % 10 %>
  <table class="player-table">
    <%= render template: 'players/_index_head', locals: {session: session} %>

    <tbody>
      <% @players.each do |player| %>
        <% if player.session == session %>
          <%= render template: 'players/_index_body', locals: {player: player, number: number += 1} %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/>
<% end %>
